<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
        android:text="Register as a User"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="50dp"
        android:gravity="left" />

    <TextView
        android:id="@+id/User_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title2"
        android:text="User Information"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>



    <EditText
        android:id="@+id/UserNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/User_info"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Name"
        android:inputType="text"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/UserAgeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserNameET"
        android:layout_margin="20dp"
        android:text="Age"
        android:inputType="number"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/UserEmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserAgeET"
        android:layout_margin="20dp"
        android:text="Email"
        android:inputType="textEmailAddress"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/UserAddressET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserEmailET"
        android:layout_margin="20dp"
        android:text="Address"
        android:inputType="text"
        android:textColor="#6C6B6E"/>

    <LinearLayout
        android:id="@+id/UserLocationLinear"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserAddressET"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/UserLocationET"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pharmacyOwnerET"
            android:layout_margin="20dp"
            android:text="location"
            android:inputType="textPostalAddress"
            android:textColor="#6C6B6E"/>

        <ImageButton
            android:id="@+id/userPlaceHolder"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:src="@drawable/ic_placeholder"
            android:background="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/password_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/UserLocationLinear"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/User_passwordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_info"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"
        android:layout_marginHorizontal="20dp"
        android:text="Password"
        android:textColor="#6C6B6E"/>

    <EditText
        android:id="@+id/confirm_User_passwordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/User_passwordET"
        android:layout_margin="20dp"
        android:text="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#6C6B6E"/>

    <Button
        android:id="@+id/UserRegister_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirm_User_passwordET"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/buttonbackground"/>



</androidx.constraintlayout.widget.ConstraintLayout>