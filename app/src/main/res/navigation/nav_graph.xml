<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userLoginFragment">

    <fragment
        android:id="@+id/pharmacyLoginFragment"
        android:name="com.team.myapplication.ui.login.PharmacyLoginFragment"
        android:label="fragment_pharmacy_login"
        tools:layout="@layout/fragment_pharmacy_login" >
        <action
            android:id="@+id/action_pharmacyLoginFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
        <action
            android:id="@+id/action_pharmacyLoginFragment_to_pharmacyRegisterFragment"
            app:destination="@id/pharmacyRegisterFragment" />
        <action
            android:id="@+id/action_pharmacyLoginFragment_to_userRegisterFragment"
            app:destination="@id/userRegisterFragment" />
        <action
            android:id="@+id/action_pharmacyLoginFragment_to_mobile_navigation"
            app:destination="@id/mobile_navigation"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/pharmacyLoginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userLoginFragment"
        android:name="com.team.myapplication.ui.login.UserLoginFragment"
        android:label="fragment_login_user"
        tools:layout="@layout/fragment_login_user" >
        <action
            android:id="@+id/action_userLoginFragment_to_userRegisterFragment"
            app:destination="@id/userRegisterFragment" />
        <action
            android:id="@+id/action_userLoginFragment_to_pharmacyRegisterFragment"
            app:destination="@id/pharmacyRegisterFragment" />
        <action
            android:id="@+id/action_userLoginFragment_to_pharmacyLoginFragment"
            app:destination="@id/pharmacyLoginFragment" />
        <action
            android:id="@+id/action_userLoginFragment_to_mobile_navigation"
            app:destination="@id/mobile_navigation"
            app:popUpTo="@id/userLoginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/pharmacyRegisterFragment"
        android:name="com.team.myapplication.ui.register.PharmacyRegisterFragment"
        android:label="fragment_pharmacy_register"
        tools:layout="@layout/fragment_pharmacy_register" >
        <action
            android:id="@+id/action_pharmacyRegisterFragment_to_userRegisterFragment"
            app:destination="@id/userRegisterFragment" />
        <action
            android:id="@+id/action_pharmacyRegisterFragment_to_userLoginFragment3"
            app:destination="@id/userLoginFragment" />
        <action
            android:id="@+id/action_pharmacyRegisterFragment_to_pharmacyLoginFragment2"
            app:destination="@id/pharmacyLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/userRegisterFragment"
        android:name="com.team.myapplication.ui.register.UserRegisterFragment"
        android:label="fragment_user_register"
        tools:layout="@layout/fragment_user_register" >
        <action
            android:id="@+id/action_userRegisterFragment_to_pharmacyRegisterFragment"
            app:destination="@id/pharmacyRegisterFragment" />
        <action
            android:id="@+id/action_userRegisterFragment_to_userLoginFragment3"
            app:destination="@id/userLoginFragment" />
        <action
            android:id="@+id/action_userRegisterFragment_to_pharmacyLoginFragment2"
            app:destination="@id/pharmacyLoginFragment" />
    </fragment>
    <include app:graph="@navigation/mobile_navigation" />
</navigation>